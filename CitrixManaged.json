{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "roleDefinitionId": {
            "type": "string",
            "metadata": {
                "Description": "Specifies the name of the Virtual Network used for virtual machine disks. This has to be a unique name, up to 24 chars, all lowercase."
            }
        },
        "principalId": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Specifies the Location for the deployment."
            }
        },
        "scope": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Specifies the Location for the deployment."
            }
        }
    },
    "variables": {
        "roleAssignmentId": "[toLower(substring(concat('ctxm-',uniqueString(subscription().subscriptionId,resourceGroup().id)), 0, 13))]"
    },
    "resources": [
        {
            "apiVersion": "2014-07-01-preview",
            "type": "Microsoft.Authorization/roleAssignments",
            "name": "[variables('roleAssignmentId')]",
            "properties": {
                "roleDefinitionId": "[parameters('roleDefinitionId')]",
                "principalId": "[parameters('principalId')]",
                "scope": "[parameters('scope')]"
            }
        }
    ],
    "outputs": { }
}
