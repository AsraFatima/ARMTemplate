{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "roleDefinitionId": {
            "type": "string",
            "metadata": {
                "Description": "Specifies the name of the Virtual Network used for virtual machine disks. This has to be a unique name, up to 24 chars, all lowercase."
            }
        },
        "principalId": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Specifies the Location for the deployment."
            }
        },
        "scope": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Specifies the Location for the deployment."
            }
        },
        "resourceGroupCount": {
            "type": "int",
            "defaultValue": "",
            "metadata": {
                "description": "Number of resource groups"
            }
        }
    },
    "variables": {
        "_artifactsLocation": "https://raw.githubusercontent.com/AsraFatima/ARMTemplate/master/",
        "generateGuidTemplateUrl": "[concat(variables('_artifactsLocation'), 'NewGuid', '.json')]"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "[concat('GenerateGuid',copyIndex())]",
            "type": "Microsoft.Resources/deployments",
            "copy": {
                "name": "guidCopy",
                "count": "[parameters('resourceGroupCount')]"
            },
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[variables('generateGuidTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "seed": {
                        "value": "[string(copyIndex())]"
                    }
                }
            }
        },
        {
            "apiVersion": "2014-07-01-preview",
            "type": "Microsoft.Authorization/roleAssignments",
            "name": "[reference(concat('GenerateGuiid',copyIndex()).outputs.guid.value)]",
            "copy": {
                "name": "anyname",
                "count": "[parameters('resourceGroupCount')]"
            },
            "properties": {
                "roleDefinitionId": "[parameters('roleDefinitionId')[copyIndex()]]",
                "principalId": "[parameters('principalId')]",
                "scope": "[parameters('scope')]"
            }
        }
    ],
    "outputs": { }
}
